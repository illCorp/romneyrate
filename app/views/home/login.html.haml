-content_for :head_scripts do
  =stylesheet_link_tag '/assets/home/shared.css'
  =stylesheet_link_tag '/assets/home/login.css'
  -if(@u)
    %meta{:property=>"og:image", :content=> image_path('facebook-share.png')}
    %meta{:property=>'og:title', :content=> "What's My Romney Rate?"}
    %meta{:property=>'og:type', :content=> 'website'}
    %meta{:property=>'og:url', :content=> "http://www.whatsmyromneyrate.com/#{@u.permalink}"}
    %meta{:property=>'og:site_name', :content=>"What's My Romney Rate?"}
    %meta{:property=>'og:description', :content=>"#{@friend_likes.count} of my friends 'like' Mitt Romney. That's a #RomneyRate of only #{@romney_rate}% !!! How low is your RomneyRate?"}
    %meta{:property=>'fb:app_id', :content=> "#{FACEBOOK_CONFIG['app_id']}"}
  -else
    %meta{:property=>"og:image", :content=> image_path('facebook-share.png')}
    %meta{:property=>'og:title', :content=> "What's My Romney Rate?"}
    %meta{:property=>'og:type', :content=> 'website'}
    %meta{:property=>'og:url', :content=> "http://www.whatsmyromneyrate.com/"}
    %meta{:property=>'og:site_name', :content=>"What's My Romney Rate?"}
    %meta{:property=>'og:description', :content=>"What percentage of your friends 'like' Mitt Romney? Find out what your RomneyRate is at www.whatsmyromneyrate.com"}
    %meta{:property=>'fb:app_id', :content=> "#{FACEBOOK_CONFIG['app_id']}"}

=render :partial => 'header'

#main_container
  #background
  #text_container
    #what_percent
      %span.main_label
        Oh crap!
    #friends_like
      %span.main_label
        What's my Romney Rate
    #question_mark
      %span.main_label ?

    #description 
      <b>Q: What percentage of your friends 'like" Mitt Romney?</b>
      %p You should know. After all, these are YOUR friends – friends that have publicly endorsed a candidate who refuses to acknowledge the existence of climate change or a woman’s right to privacy. Friends who might turn their “like” of Mitt Romney into a vote for him next Tuesday. Gross.
      %p Click below and hold your breath while we calculate the unfortunate percentage of your friends that "like" Mitt Romney. Once you have your RomneyRate you can commence bragging (lamenting) about how forward (backward) thinking your social network is (or isn't. Yikes!). Good luck.
      %p <b>A:</b>

    .login_container
      #login_button
        .label_container
          %span.first_part Calculate your
          %span.second_part Romney Rate
      #login_subtext (remember, lower is better)

=render :partial => 'footer'
#fb-root

-content_for :end_scripts do
  =javascript_include_tag '/assets/home/login.js'
